[global]
    alignment = center
    dmenu = ~/.config/sway/menu.sh "dunst: "
    icon_theme = Papirus-Dark
    enable_recursive_icon_lookup = true
    follow = mouse
    font = JetBrains Mono 10
    format = "<b>[%a]\n%s</b>\n%b"
    frame_color = "#706670"
    frame_width = 1
    highlight = "#e3e6e8"
    history_length = 50
    horizontal_padding = 10
    idle_threshold = 120
    ignore_newline = no
    indicate_hidden = yes
    line_height = 5
    markup = full
    max_icon_size = 128
    mouse_left_click = close_current
    offset = 10x10
    origin = bottom-right
    padding = 8
    progress_bar_max_width = 450
    progress_bar_min_width = 450
    separator_height = 0
    show_age_threshold = 60
    show_indicators = yes
    sort = yes
    sticky_history = yes
    width = 450
    word_wrap = yes

[urgency_low]
    background = "#282828"
    foreground = "#e3e6e8"
    timeout = 10

[urgency_normal]
    background = "#282828"
    foreground = "#e3e6e8"
    timeout = 30

[urgency_critical]
    background = "#393939"
    foreground = "#e3e6e8"
    timeout = 60

