#!/usr/bin/env zsh

setopt autocd               \
       extendedglob         \
       nomatch              \
       interactive_comments \
       noflowcontrol        \
       auto_pushd           \
       complete_in_word     \
       hist_ignore_dups     \
       hist_ignore_space    \
       incappendhistory     \
       share_history

to_source=(
  ~/.id
  ~/.zsh/wsl.sh
  ~/.zsh/functions.sh
  ~/.zsh/alias.sh
  ~/.zsh/env.sh
  ~/.zsh/binding.sh
  ~/.zsh/simple.zsh-theme
  /etc/profiles/per-user/$USER/etc/profile.d/hm-session-vars.sh
)

for i in ${to_source[@]}; {
  [[ -e $i ]] && source "$i"
}

# vim: set ft=zsh ts=2 sts=2 sw=2 et :
